<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- InAppBrowser Toolbar Style -->
    <style name="InAppToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/toolbarColor</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    <!-- Common Styles for Navigation Buttons-->
    <style name="NavigationButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:enabled">@android:color/transparent</item>
        <item name="android:alpha">0.2</item>
    </style>
    <!-- Back Navigation Button-->
    <style name="NavigationButton.Back">
        <item name="android:id">@id/start_button</item>
        <item name="android:contentDescription">back_button</item>
        <item name="android:src">?attr/backButtonSrc</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <!-- Forward Navigation Buttons-->
    <style name="NavigationButton.Forward">
        <item name="android:id">@id/end_button</item>
        <item name="android:contentDescription">forward_button</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:src">?attr/forwardButtonSrc</item>
    </style>
    <!-- URL -->
    <style name="URLBar" parent="Widget.AppCompat.TextView">
        <item name="android:id">@id/url_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textColor">?attr/urlColor</item>
    </style>

    <!-- Close Button -->
    <style name="CloseButton" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!-- Custom Tabs Controller Activity -->
    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>